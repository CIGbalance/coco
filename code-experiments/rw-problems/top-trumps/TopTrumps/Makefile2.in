CXXFLAGS := -std=c++11
WFLAGS := -Wall -Wpedantic
LDFLAGS += -fpic -shared

srcfiles := utils/hoy.cpp Simulation/Card.cpp Simulation/Deck.cpp Simulation/Agent.cpp Simulation/Game.cpp Simulation/Outcome.cpp
mainfiles:= top_trumps.cpp c_main.c
objects  := $(patsubst %.cpp, %.o, $(srcfiles))
mains  := $(patsubst %.cpp, %.o, $(mainfiles))

all: TopTrumpsEval top_trumps_evaluate

TopTrumpsEval: $(objects)
	$(CXX) $(CXXFLAGS) $(WFLAGS) $(LDFLAGS) -o TopTrumpsEval.dll top_trumps.cpp $(objects)
	
top_trumps_evaluate: $(objects)
	gcc -std=c89 $(WFLAGS) $(LDFLAGS) -L. -lTopTrumpsEval -o top_trumps_evaluate c_main.c

depend: .depend

.depend: $(srcfiles)
	rm -f ./.depend
	$(CXX) $(CXXFLAGS) -MM $^>>./.depend;

clean:
	rm -f $(objects) $(mains)

dist-clean: clean
	rm -f *~ .depend

include .depend
